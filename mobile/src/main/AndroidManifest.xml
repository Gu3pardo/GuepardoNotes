<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guepardoapps.mynote">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="guepardoapps.mynote.activities.ActivityAdd" />
        <activity
            android:name="guepardoapps.mynote.activities.ActivityBoot"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="guepardoapps.mynote.activities.ActivityDetails" />
        <activity android:name="guepardoapps.mynote.activities.ActivityImpressum" />
        <activity android:name="guepardoapps.mynote.activities.ActivityNotes" />
        <activity android:name="guepardoapps.mynote.activities.ActivitySettings" />

        <service
            android:name="guepardoapps.mynote.service.FloatingService"
            android:enabled="true" />
    </application>

</manifest>
